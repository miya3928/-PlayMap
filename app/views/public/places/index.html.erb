<h1 class="text-center my-4">場所一覧</h1>
<div class="container">
  <div class="row">
    <% @places.each do |place| %>
      <div class="col-md-4 mb-4"> <!-- 3列レイアウト -->
        <div class="card h-100"> <!-- 高さを揃える -->
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to place.name, place_path(place), class: "text-decoration-none text-primary" %>
            </h5>
            <p class="card-text"><%= truncate(place.description, length: 100) %></p>
            <p class ="text-muted mt-2"> 住所: <%= place.address %></p>
          </div>
          <div class="card-footer text-end">
            <%= link_to "詳細を見る", place_path(place), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @places %>
  </div>
</div>