<%= form_with model: @post, local: true do |f| %>
  <div class="container my-5">
    <div class="mb-3">
      <%= f.label :title, "タイトル", class: "form-label" %>
      <%= f.text_field :title, value: @post.title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :body, "本文", class: "form-label" %>
      <%= f.text_area :body, value: @post.body, class: "form-control", rows: 6 %>
    </div>

    <div class="d-grid">
      <%= f.submit "変更を保存する", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

   