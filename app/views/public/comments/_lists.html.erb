<div id="comments-list">
  <!-- コメント一覧 -->
  <% if defined?(commetable) && commetable.present? && commetable.comments.present? %>
    <% commetable.comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.body %></p>
        <p><%= comment.user.name %></p>
      </div>
    <% end %>
  <% else %>
    <p>コメントはまだありません。</p>
  <% end %>
</div>