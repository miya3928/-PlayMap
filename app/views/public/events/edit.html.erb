<<h1 class="text-center my-4">イベント編集</h1>
<%= form_with model: @event, local: true do |f| %>
  <div class="container my-5">
    <div class="mb-3">
      <%= f.label :title, "名前", class: "form-label" %>
      <%= f.text_field :title, value: @event.title, class: "form-control" %>
    </div>

    <div>
      <%= f.label :start_date, '開始日時' %>
      <%= f.text_field :start_date, value: @event.start_date, class: "form-control" %>
    </div>

    <div>
      <%= f.label :end_date, '終了日時' %>
      <%= f.text_field :end_date, value: @event.end_date, class: "form-control" %>
    </div>


    <div class="mb-3">
      <%= f.label :body, "本文", class: "form-label" %>
      <%= f.text_area :body, value: @event.body, class: "form-control", rows: 6 %>
    </div>

    <div class="d-grid">
      <%= f.submit "変更を保存する", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>
