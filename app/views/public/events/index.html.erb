<h1 class="text-center my-4">場所一覧</h1>
<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4 mb-4"> 
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to event.title, event_path(event), class: "text-decoration-none text-primary" %>
            </h5>
            <p class="card-text"><%= truncate(event.body, length: 100) %></p>
            <p class ="text-muted mt-2"> 開始日時: <%= event.start_date %></p>
            <p class ="text-muted mt-2"> 終了日時: <%= event.end_date %></p>
          </div>
          <div class="card-footer text-end">
            <%= link_to "詳細を見る", event_path(event), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- ページネーション -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @events %>
  </div>
</div>