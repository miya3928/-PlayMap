<h1>ユーザー管理</h1>
<table>
 <thead>
  <tr>
   <th>ID</th>
   <th>名前</th>
   <th>メールアドレス</th>
   <th>ステータス</th>
   <th>アクション</th>
  </tr>
 </thead>
 <tbody>
  <% @users.each do |user| %>
   <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td> 
    <td><%= user.email %></td> 
    <td><%= user.is_active %></td> 
    <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-info" %></td>
   </tr>
  <% end %>
 </tbody>
</table> 

